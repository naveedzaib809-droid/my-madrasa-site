<script>  
    // --- Language Toggle Logic ---  
    function toggleLanguage() {  
        const body = document.body;  
        const langBtn = document.querySelector('.lang-btn');  
        const elements = document.querySelectorAll('.lang-text');  
        const isEnglish = body.classList.toggle('en-mode');  

        if (isEnglish) {  
            // Switch to LTR and English Text  
            body.setAttribute('dir', 'ltr');  
            body.setAttribute('lang', 'en');  
            langBtn.textContent = "Ø§Ø±Ø¯Ùˆ";  
              
            elements.forEach(el => {  
                if(el.getAttribute('data-en')) {  
                    el.textContent = el.getAttribute('data-en');  
                }  
                // For select inputs, options need handling differently if not selected  
                if(el.tagName === 'OPTION') {  
                    el.text = el.getAttribute('data-en');  
                }  
            });  

        } else {  
            // Switch to RTL and Urdu Text  
            body.setAttribute('dir', 'rtl');  
            body.setAttribute('lang', 'ur');  
            langBtn.textContent = "English";  

            elements.forEach(el => {  
                if(el.getAttribute('data-ur')) {  
                    el.textContent = el.getAttribute('data-ur');  
                }  
                if(el.tagName === 'OPTION') {  
                    el.text = el.getAttribute('data-ur');  
                }  
            });  
        }  
    }  

    // --- Form Validation Logic ---  
    function validateForm(event) {  
        event.preventDefault(); // Stop page reload  

        // Get values  
        const name = document.getElementById('name').value;  
        const phone = document.getElementById('phone').value;  
        const age = document.getElementById('age').value;  
        const successMsg = document.getElementById('success-msg');  

        // Basic validation checks  
        if (name.length < 3) {  
            alert("Please enter a valid name / Ø¨Ø±Ø§Ø¦Û’ Ù…ÛØ±Ø¨Ø§Ù†ÛŒ Ø¯Ø±Ø³Øª Ù†Ø§Ù… Ø¯Ø±Ø¬ Ú©Ø±ÛŒÚº");  
            return false;  
        }  

        // Simple Phone validation (must contain numbers)  
        const phoneRegex = /^[0-9\-\+]{10,15}$/;  
        if (!phoneRegex.test(phone)) {  
            alert("Please enter a valid phone number / Ø¨Ø±Ø§Ø¦Û’ Ù…ÛØ±Ø¨Ø§Ù†ÛŒ Ø¯Ø±Ø³Øª ÙÙˆÙ† Ù†Ù…Ø¨Ø± Ø¯Ø±Ø¬ Ú©Ø±ÛŒÚº");  
            return false;  
        }  

        // If valid:  
        // In a real website, you would send this data to a server using fetch()  
        // Example: fetch('https://formspree.io/f/your_code', { method: 'POST', body: ... })  
          
        // For now, show success message  
        successMsg.style.display = 'block';  
        document.getElementById('admissionForm').reset();  
          
        // Hide message after 5 seconds  
        setTimeout(() => {  
            successMsg.style.display = 'none';  
        }, 5000);  

        return true;  
    }  
</script>

